<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FAFAFA"
    >
    <TextView
        android:id="@+id/title_text"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/colorPrimary"
        android:textSize="16dp"
        android:text="Please Enter Reason For Uninstalling (Or Provide Message in Menu/Help):"/>


    <LinearLayout
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/impression"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="APp Was Not What I Thought It Was"
            android:textColor="#FFFFFF"
            android:background="@color/colorPrimary"
            android:padding="2dp"
            android:layout_margin="5dp"/>
        <Button
            android:id="@+id/understand"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="I Don't Understand How To Use This APP"
            android:textColor="#FFFFFF"
            android:background="@color/colorPrimary"
            android:padding="2dp"
            android:layout_margin="5dp"/>
        <Button
            android:id="@+id/content"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="App Needs More Base Content Lists"
            android:textColor="#FFFFFF"
            android:background="@color/colorPrimary"
            android:padding="2dp"
            android:layout_margin="5dp"/>

        <Button
            android:id="@+id/features"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="App Needs More Features"
            android:textColor="#FFFFFF"
            android:background="@color/colorPrimary"
            android:padding="2dp"
            android:layout_margin="5dp"/>

        <Button
            android:id="@+id/errors"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Too Many Errors"
            android:textColor="#FFFFFF"
            android:background="@color/colorPrimary"
            android:padding="2dp"
            android:layout_margin="5dp"/>
        <Button
            android:id="@+id/cancel"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cancel"
            android:textColor="#FFFFFF"
            android:background="@color/colorPrimary"
            android:padding="2dp"
            android:layout_margin="5dp"/>

    </LinearLayout>
</LinearLayout>